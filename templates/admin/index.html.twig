{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur
{% endblock %}

{% block body %}

{% include 'admin/nav.html.twig'%}
<div class="jumbotron">

	<p>
		<span class="h-sub">Bonjour, </span>
		<br>
		<span class="h-display">{{ app.user.firstname }}</span>
	</p>
</div>

<div class="container">


	<h2>
		Derni√®res annonces</h2>
	{% for announcement in announcements %}
	<div class="card">
		<div class="card-header">
			<div><img src="{{ asset('icons/horn.svg') }}" alt=""></div>

			<h4>{{ announcement.announcementTitle}}</h4>
		</div>

		<div class="card-body">
			{{ announcement.announcementContent | raw }}
		</div>
		<div class="card-btn">
			<a href=" {{ path('announcements_edit', {id: announcement.id}) }}" type="button"
				class="btn btn-warning btn-sm">&Eacute;diter</a>
			<a href=" {{ path('announcements_delete', {id: announcement.id}) }}" type="button"
				class="btn btn-danger btn-sm">Supprimer</a>
		</div>
	</div>
	{% endfor %}

</div>

{% endblock %}