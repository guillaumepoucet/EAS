{% block body%}

<div id="navbar">
  <div class="navbar">
    <div class="pointer nav-menu-link">
      <img src="{{ asset('icons/menu.svg') }}" alt="">
      <span>MENU</span>
    </div>
  </div>

  <nav class="nav-content">
    <ul>
      {% if is_granted('ROLE_ADMIN') %}

      <li>
        <a href="{{ path('admin') }}" class="nav-link {{ 'admin' in route ? 'active' }}">Accueil</a>
      </li>


      <li>
        <a href="{{ path('users_management') }}" class="nav-link {{ 'users' in route ? 'active' }}">Elèves</a>
      </li>


      <li>
        <a href="{{ path('sessions_management') }}" class="nav-link {{ 'sessions' in route ? 'active' }}">Formations</a>
      </li>


      <li>
        <a href="{{ path('document_index') }}" class="nav-link {{ 'document' in route ? 'active' }}">Fichiers</a>
      </li>


      <li>
        <a href="{{ path('document_new') }}" class="nav-link sub-nav-link">+ Ajouter un fichier</a>
      </li>


      <li>
        <a href="{{ path('announcement_index') }}"
          class="nav-link {{ 'announcement' in route ? 'active' }}">Annonces</a>
      </li>


      <li>
        <a href="{{ path('announcement_new') }}" class="nav-link sub-nav-link">+ Créer une annonce</a>
      </li>

      {% else %}

      <li>
        <a href="{{ path('user_dashboard') }}" class="nav-link {{ 'dashboard' in route ? 'active' }}">Accueil</a>
      </li>
      <li>
        <a href="" class="nav-link {{ 'sessions' in route ? 'active' }}">Vos
          formations <small>(à venir)</small></a>
      </li>
      <li class="nav-link {{ 'document' in route ? 'active' }}">
        <a href="{{ path('document_index') }}">Fichiers</a>
      </li>

      <li>
        <a href="{{ path('announcement_index') }}"
          class="nav-link {{ 'announcement' in route ? 'active' }}">Annonces</a>
      </li>

      {% endif %}

      <li class="nav-link {{ 'messages' in route ? 'active' }}">
        <a  href=" {{ path('messages_index', {user: app.user.id}) }}">Messagerie</a>
      </li>
    </ul>

    <ul class="nav-account">
      <li>{{ app.user.name }}</li>
      <li><a href="{{ path('user_edit', {id: app.user.id}) }}">
          <img src="{{ asset('icons/settings-lg.svg') }}" alt="">Mon compte</a></li>
      <li><a href="{{ path('logout') }}">
          <img src="{{ asset('icons/logout-lg.svg') }}" alt="">Déconnection</a></li>
    </ul>
  </nav>
</div>
{% endblock %}