{% extends 'base.html.twig' %}

{% block title %}EAS{% endblock %}

{% block body %}

<div class="full-grid" style="width: 100vw; height: 100vh;">
    <div class="login-form d-flex">

        <img src="{{ asset('images/eas_small.jpg') }}" alt="">

       
            <form method="post" class="form">
         

                {% if app.user %}
                <div class="">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
                {% endif %}

                <h4 class="mb-1 text-center">Login</h4>
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <label for="inputEmail">Email</label>
                <input class="mb-1" type="email" value="{{ last_username }}" name="email" id="inputEmail" class=""
                    required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input class="mb-1" type="password" name="password" id="inputPassword" class="" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
    #}

                <button class="btn btn-lg btn-primary-dk" type="submit">
                    Me connecter
                </button>
            </form>
   
    </div>
</div>
{% endblock %}