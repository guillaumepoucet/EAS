<form method="post" action="{{ path('announcement_delete', {'id': announcement.id}) }}" style="height: 32px;" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ announcement.id) }}">
    <button class="no-btn"><img class="icon trash" src="{{ asset('icons/trash.svg') }}" alt="" title="Supprimer"></button>
</form>
