{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
{% include 'nav.html.twig' %}
<div class="single-row" style="place-content: center;">
    <div class="">
        <div class="wrap-titles">
            <h2>Annonce -
                {% if is_granted('ROLE_ADMIN') %}
                {{ announcement.isDraft ? 'Publié : &#x292B;' : 'Publié : &#10004;' }}
                {% endif %}


            </h2>
            <h2 class="back-to-dashboard">
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}">&#10229; Retour à l'accueil</a>
                {% else %}
                <a href="{{ path('user_dashboard') }}">&#10229; Retour à l'accueil</a>
                {% endif %}
            </h2>

        </div>

        <div class="wrap">
            {% include "announcement/_card.html.twig" %}
        </div>
    </div>
</div>
